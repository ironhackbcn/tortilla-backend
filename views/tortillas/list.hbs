<section class="section container">

  <h1 class="title">Las Tortillas</h1>

  <ul class="list is-hoverable">
    {{#each tortillas}}
      <li > 
        <a class="list-item" href="/tortillas/{{this._id}}">{{this.name}}</a>
      </li>
    {{/each}}
  </ul>

  <form method="GET" id="search-tortilla" action="/api/tortillas">

    <div class="field">
      <label class="label">Buscar por usuario</label>
      <div class="control">
        <input class="input" type="text" name="username"/>
      </div>
    </div>

    <div class="field submit">
      <button class="button is-link" type="submit">Buscar</button>
    </div>
  </form>

</section>

<script src="/javascripts/index.js"></script>